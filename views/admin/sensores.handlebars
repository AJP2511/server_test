<h2>Lista de Sensores:</h2>
<hr>
<a href="/admin/sensores/add"><button class="btn btn-success">Novo sensor</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome do sensor: {{nome_equipamento}}</h4>
            <p>Vibração: {{marca}}</p>
            <p>Vibração: {{quantidade}}</p>
            <small>Status: {{estado}}</small>
            <br>
            <small>Data: {{date}}</small>
            <br>
            <small>Nome da categoria: {{categoria.nome}}</small> <br>
            <a href="/admin/sensores/edit/{{_id}}"><button class="btn btn-success mt-2">Editar sensor</button></a>
            <form action="/admin/sensores/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar sensor</button>
            </form>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}