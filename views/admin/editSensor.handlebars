<div class="card">
    <div class="car-body">
        <h4>Editar sensor</h4>
        <form action="/admin/sensores/edit" method="POST">
            <input type="hidden" value="{{data._id}}" name="id">
            <label for="nome_sensor">Nome do sensor: </label>
            <input type="text" name="nome_sensor" id="nome_sensor" class="form-control" value="{{data.nome_sensor}}" >
            <label for="vibracao">Vibracao: </label>
            <input type="text" name="vibracao" id="vibracao" class="form-control" value="{{data.vibracao}}">
            <label for="status">Status: </label>
            <select name="status" class="custom-select" >
                <option value={{data.status}}>{{data.status}}</option>
                <option value="Online">Online</option>
                <option value="Offline">Offline</option>
            </select>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nehuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Editar sensor</button>
        </form>
    </div>
</div>