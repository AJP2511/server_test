{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}


<div class="card">
    <div class="car-body">
        <h4>Editar sensor</h4>
        <form action="/admin/sensores/edit" method="POST">
            <input type="hidden" value="{{data._id}}" name="id">
            <label for="nome_equipamento">Nome do equipamento: </label>
            <input type="text" name="nome_equipamento" id="nome_equipamento" class="form-control" value="{{data.nome_equipamento}}" >
            <label for="marca">Marca: </label>
            <input type="text" name="marca" id="marca" class="form-control" value="{{data.marca}}">
            <label for="estado">Estado: </label>
            <input type="text" name="estado" id="estado" class="form-control" value="{{data.estado}}">
            <label for="quantidade">Quantidade: </label>
            <input type="text" name="quantidade" id="quantidade" class="form-control" value="{{data.quantidade}}">
            <label for="status">Status: </label>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nehuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Editar sensor</button>
        </form>
    </div>
</div>